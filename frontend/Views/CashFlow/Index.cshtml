@{

    ViewBag.Title = "Transaction Details";
}
@model List<CashFlow>

<table class="table table-condensed table-striped  table-hover pushDown">
    <thead>
        <tr>
            <th style="width: 5%;">Id</th>
            <th style="width: 10%;">Email</th>
            <th style="width: 10%;">Type</th>
            <th style="width: 10%;">Amount</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)

        {
            <tr>
                <td style="width: 5%;">@item.TransactionId</td>
                <td style="width: 10%;"><a href="mailto:@item.Email" class="emailLink">@item.Email</a></td>
                <td style="width: 10%;">@item.TransactionType</td>
                <td style="width: 10%;">@item.TransactionAmount</td>
                <td>
                    <Details>
                        <Summary>Transaction Details</Summary>
                        <p><kbd>TransactionId</kbd> @item.TransactionId</p>
                        <p><kbd>FirstName</kbd> @item.FirstName</p>
                        <p><kbd>Email</kbd> <a href="mailto:@item.Email" class="emailLink">@item.Email</a></p>
                        <p><kbd>UserId</kbd> @item.UserId</p>
                        <p><kbd>TransactionType</kbd> @item.TransactionType</p>
                        <p><kbd>TransactionAmount</kbd> @item.TransactionAmount</p>
                        <p><kbd>TransactionDate</kbd> @item.TransactionDate</p>
                        <p><kbd>TransactionStatus</kbd> @item.TransactionStatus</p>
                    </Details>
                </td>
            </tr>

        }
    </tbody>
</table>

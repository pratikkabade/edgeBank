@{
    ViewBag.Title = "Edit - " + @Model.FirstName;
}
@model Users


<form asp-action="Edit" asp-controller="NewUser" method="post" class="contactForm">
    <fieldset>
        <p>
            <input asp-for="FirstName" placeholder="FirstName" />
        </p>
        <p>
            <input asp-for="LastName" placeholder="LastName" />
        </p>
        <p>
            <input asp-for="Email" placeholder="Email" />
        </p>
        <p>
            <input asp-for="Password" placeholder="Password" />
        </p>
        <p>
            <input asp-for="MobileNumber" placeholder="MobileNumber" />
        </p>
        <p>
            <input asp-for="AadharCard" placeholder="AadharCard" />
        </p>
        <p>
            <input asp-for="PAN_Card" placeholder="PAN_Card" />
        </p>
        <p>
            <input asp-for="Address" placeholder="Address" />
        </p>
        <p>
            <input asp-for="Nominee" placeholder="Nominee" />
        </p>
        <p>
            <button type="submit" class="btn btn-primary">Save</button>
        </p>
    </fieldset>
    <h6 style="color:green">@Html.Raw(@ViewBag.Message)</h6>

</form>